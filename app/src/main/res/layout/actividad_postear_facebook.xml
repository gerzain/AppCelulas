<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView

        android:id="@+id/BtnCamara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TituloAcrividad"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="250dp"
        android:minHeight="250dp"
        android:scaleType="center"
        android:src="@drawable/ic_camara" />

    <EditText
        android:id="@+id/TituloAcrividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPublicar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:hint="Escribe el nombre del proyecto"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <EditText
        android:id="@+id/editDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPublicar"
        android:layout_alignLeft="@+id/TituloAcrividad"
        android:layout_alignStart="@+id/TituloAcrividad"
        android:layout_marginBottom="36dp"
        android:ems="12"
        android:hint="Escribe una descripcion"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <Button


        android:id="@+id/iv_img_postear"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/BtnCamara"
        android:layout_alignEnd="@+id/BtnCamara"
        android:layout_alignRight="@+id/BtnCamara"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_camara" />

    <Button
        android:id="@+id/btnPublicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="Publicar"
        android:textAllCaps="false" />


</RelativeLayout>